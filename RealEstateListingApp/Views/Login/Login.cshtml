@model RealEstateListingApp.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #rememberMe {
        display: inline-block;
        margin-right: 10px;
    }

    label[for="rememberMe"] {
        display: inline-block;
    }

</style>
<div class="">
    <div class="container">
        <div class="row mt-5 contact-content">
            <div class="col-sm-12 col-md-6 offset-3 justify-content-center d-flex">
                <form id="contact-form" asp-controller="Login" asp-action="Login" method="post">
                    <h2 class="form-title mt-2 text-center">Login</h2>
                    <div class="row mt-4">
                        <div class="col-lg-12">
                            <fieldset>
                                @* <label for="name">Full Name</label>
                                <input type="name" name="name" id="name" placeholder="Your Name..." autocomplete="on" required> *@
                                <label for="username">Username</label>
                                <input asp-for="UserName" class="form-control" name="username" id="UserName" placeholder="Your User Name" value="@ViewBag.Username" />
                                <span asp-validation-for="UserName" style="color:red"></span>

                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                @*  <label for="email">Email Address</label>
                                <input type="text" name="email" id="email" placeholder="Your E-mail..." required=""> *@
                                <label for="password">Password</label>
                                <input asp-for="Password" class="form-control" type="password" name="password" id="password" placeholder="Password" value="@ViewBag.Password" />
                                <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                                <span asp-validation-for="Password" style="color:red"></span>

                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" style="height:20px;width:1px;color:blue;background-color:black;border-radius:0px;" id="rememberMe" name="rememberMe" asp-for="rememberMe" checked="@ViewBag.CheckValue" />
                                <label class="form-check-label" for="rememberMe"> Remember me</label>
                            </div>
                        </div>

                        <div class="col-lg-12 mt-3 text-center">
                            <input type="submit" style="background-color:cornflowerblue;color:black;" value="Submit" />
                            Create an account? <a asp-action="Register" asp-controller="Login" class="loginhere-link">Register here</a>
                        </div>
                        <div class="col-lg-12">
                            @if (TempData["SuccessMsg"] != null)
                            {
                                <span style="color:red">@TempData["SuccessMsg"]</span>
                            }
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
