@model RealEstateListingApp.Models.User

@{
    Layout = "_Layout";
}

@Html.Raw(TempData["SuccessMsg"])


@* <!-- Font Icon -->
<link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">

<!-- Main css -->
<link rel="stylesheet" href="~/css/style.css"> *@



<div class="">
    <div class="container">
        <div class="row mt-5 contact-content">
            <div class="col-sm-12 col-md-6 offset-3 justify-content-center d-flex">
                <form id="contact-form" asp-controller="Login" asp-action="Register" method="POST">
                    <h2 class="form-title mt-2 text-center">Create account</h2>
                    <div class="row mt-2">
                        <div class="col-lg-12">
                            <fieldset>
                                @* <label for="name">Full Name</label>
                                <input type="name" name="name" id="name" placeholder="Your Name..." autocomplete="on" required> *@
                                <input asp-for="UserName" class="form-control" name="UserName" id="UserName" placeholder="Your User Name" />
                                <span asp-validation-for="UserName" style="color:red"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                               @*  <label for="email">Email Address</label>
                                <input type="text" name="email" id="email" placeholder="Your E-mail..." required=""> *@
                                <input asp-for="Password" class="form-control" name="password" id="password" placeholder="Password" />
                                <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                                <span asp-validation-for="Password" style="color:red"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                @*         <label for="message">Message</label>
                                <textarea name="message" id="message" placeholder="Your Message"></textarea> *@
                                <input asp-for="ContactInfo" class="form-control" name="ContactInfo" id="ContactInfo" placeholder="Your Contact No." />
                                <span asp-validation-for="ContactInfo" style="color:red"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                            @*     <label for="subject">Subject</label>
                                <input type="subject" name="subject" id="subject" placeholder="Subject..." autocomplete="on"> *@
                                <select asp-for="Role" class="form-control">
                                    <option value="">Select Role</option>
                                    <option value="User">User</option>
                                    <option value="Agent">Agent</option>
                                </select>
                                <span asp-validation-for="Role" style="color:red"></span>
                            </fieldset>
                        </div>
                        
                        <div class="col-lg-12 mt-3 text-center">
                                <input type="submit" style="background-color:cornflowerblue;color:black;" value="Sign up" />
                            Have already an account ? <a asp-action="Login" asp-controller="Login" class="loginhere-link">Login here</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
