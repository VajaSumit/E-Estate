@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<br />
<h1>&nbsp;&nbsp;Dashboard</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Properties</h5>
                    <p class="card-text">@ViewBag.Property</p>
                    <a asp-action="Index" asp-controller="Property" class="btn btn-sm btn-outline-primary">Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"> Users</h5>
                    <p class="card-text">@ViewBag.User</p>
                    <a asp-action="AllUsers" asp-controller="Home" class="btn btn-sm btn-outline-primary">Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Agents</h5>
                    <p class="card-text">@ViewBag.Agent</p>
                    <a asp-action="AllAgent" asp-controller="Home" class="btn btn-sm btn-outline-primary">Details</a>
                </div>
            </div>
        </div>
    </div>
</div>
